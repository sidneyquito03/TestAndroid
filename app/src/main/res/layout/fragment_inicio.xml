<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="377dp"
                android:layout_height="197dp"
                android:layout_marginBottom="16dp"
                android:background="#B3FFFFFF"
                android:clipToOutline="true"
                app:cardCornerRadius="26dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="352dp"
                    android:layout_height="156dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/elegirtec" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text_becas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postula a sus diversas BECAS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_carousel"
                android:layout_width="377dp"
                android:layout_height="195dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Carrusel de tarjetas"
                tools:listitem="@layout/item_carousel_card" />

            <LinearLayout
                android:id="@+id/layout_testimonios"
                android:layout_width="372dp"
                android:layout_height="38dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_testimonios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Testimonios"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_testimonios"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Icono de testimonios"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tectitulo" />
            </LinearLayout>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/layout_tarjetas_adicionales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Tarjeta 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:layout_margin="8dp"
                        android:clipToOutline="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/image_tarjeta_1"
                                android:layout_width="149dp"
                                android:layout_height="128dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vide1"
                                android:clickable="true"
                                android:focusable="true"/>


                            <TextView
                                android:id="@+id/title_tarjeta_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="VICTOR MORI "
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/description_tarjeta_1"
                                android:layout_width="164dp"
                                android:layout_height="57dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/bubble_background"
                                android:gravity="center"
                                android:text="Ingeniero Senior de Produccion en Alicorp"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tarjeta 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:layout_margin="8dp"
                        android:clipToOutline="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/image_tarjeta_2"
                                android:layout_width="157dp"
                                android:layout_height="132dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vide2"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/title_tarjeta_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BRUNO CACHO"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />


                            <TextView
                                android:id="@+id/description_tarjeta_2"
                                android:layout_width="164dp"
                                android:layout_height="57dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/bubble_background"
                                android:gravity="center"
                                android:text="Gerente General CyC Fish and Food"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tarjeta 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:layout_margin="8dp"
                        android:clipToOutline="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/image_tarjeta_3"
                                android:layout_width="144dp"
                                android:layout_height="137dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vide3"
                                android:clickable="true"
                                android:focusable="true"/>


                            <TextView
                                android:id="@+id/title_tarjeta_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="FRISHER LEON"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/description_tarjeta_3"
                                android:layout_width="174dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/bubble_background"
                                android:gravity="center"
                                android:text="Chief Electrician en Ensign Energy"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:background="#FDFDFD">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VISÍTALO"
                    android:padding="6dp"
                    android:background="#0CD3ED"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00D2ED"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Sede Lima:\nAv. Cascanueces 2221\n- Sta. Anita"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:text="Horario de Atención:\nDe lunes a viernes de 9:00 a.m. a 9:00 p.m. | Sábados de 9:00 a.m. a 7:00 p.m."
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
